<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="txt_style" parent="AppTheme">
        <item name="android:drawablePadding">@dimen/c_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textDirection">locale</item>
        <item name="android:paddingTop">@dimen/c_padding_min</item>
        <item name="android:paddingBottom">@dimen/c_padding_min</item>
        <item name="android:paddingEnd">@dimen/c_padding_min</item>
    </style>



    <style name="titleStyle" parent="txt_style">
        <item name="android:textColor">@color/appFontDark</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/c_padding</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingEnd">@dimen/c_padding</item>
    </style>

    <style name="titleStyleBlack" parent="titleStyle">
        <item name="android:textColor">@color/black_app</item>
    </style>

    <style name="titleStyleBlackBold" parent="titleStyleBold">
        <item name="android:textColor">@color/black_app</item>

        <item name="android:textSize">@dimen/title_size5</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>


    <style name="titleStyleBlackBold2" parent="titleStyleBlackBold">
     <item name="android:paddingStart">0dp</item>
    </style>

    <style name="titleStyle2" parent="titleStyle">
        <item name="android:paddingTop">@dimen/c_padding</item>
        <item name="android:paddingBottom">@dimen/c_padding</item>
        <item name="android:textColor">@color/gray_xxxx</item>

    </style>

    <style name="titleStyleBold" parent="titleStyle">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="titleStyleLight" parent="titleStyle">
        <item name="android:fontFamily">@font/lato_light</item>
    </style>


    <style name="titleStyle3" parent="txt_style">
        <item name="android:textColor">@color/appFontDark</item>
        <item name="android:textSize">@dimen/title_size3</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/c_padding</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingEnd">@dimen/c_padding</item>
    </style>


    <style name="txt_style2" parent="txt_style">

        <item name="android:textSize">@dimen/xxxx_size</item>

    </style>


    <style name="txt_style3" parent="txt_style2">
        <item name="android:textSize">@dimen/xx_size</item>
    </style>

    <style name="txt_style4" parent="txt_style">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="txt_style5" parent="txt_style">
<!--
        <item name="android:layout_marginStart">@dimen/c_padding</item>
-->
        <item name="android:paddingStart">@dimen/c_padding</item>
    </style>

    <style name="txt_styleValue" parent="titleStyle2">
        <item name="android:textColor">@color/c2</item>
        <item name="android:textSize">@dimen/xxxx_size</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="txt_styleValue2" parent="txt_styleValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/xx_size</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="txt_appBarStyle" parent="titleStyle">
        <item name="android:textSize">@dimen/appBarTextSize</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">23</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <style name="txt_itemTitle" parent="txt_style">
        <item name="android:textSize">@dimen/xxxx_size</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="txt_itemTextAppearanceActive" parent="AppTheme">
        <item name="android:textSize">@dimen/xx_size</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="txt_BottomNavigationView" parent="AppTheme">
        <item name="android:textSize">@dimen/x_size</item>
    </style>

</resources>