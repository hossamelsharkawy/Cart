<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.hossamelsharkawy.simplecart.app.features.products.ProductViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBar_height"
        android:background="@color/appBarColor2"
        android:elevation="@dimen/elevationValue2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_menuToolBar"
            style="@style/ic_toolbar"
            android:layout_marginStart="@dimen/c_padding_xx"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_logoo" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_BackToolBar"
            style="@style/btn_back_toolbar"
            android:layout_marginStart="@dimen/c_padding_xx"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:tint="@color/ic_colorLight" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_sort"
                style="@style/ic_toolbar"

                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_sort_24"
                app:tint="@color/ic_colorLight" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_Search"
                style="@style/btn_search_toolbar" />


            <include
                layout="@layout/notifications_bar_view"
                app:viewModel="@{viewModel}" />

            <include
                android:id="@+id/cart_bar_view"
                layout="@layout/cart_bar_view"
                app:viewModel="@{viewModel}" />


        </LinearLayout>


        <TextView
            android:id="@+id/txt_titleToolBar"
            style="@style/txt_appBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/app_name"

            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23000002" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
